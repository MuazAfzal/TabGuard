{
  "manifest_version": 3,
  "name": "TabGuard - AI Security Scanner",
  "version": "2.1.0",
  "description": "AI-powered browser security scanner with real-time phishing and URL threat detection.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*"
  ],

  "icons": {
  "16": "icon.png"
  },


  "action": {
    "default_icon":"icon.png",
    "default_popup": "popup.html",
    "default_title": "TabGuard AI Scanner"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["tfjs_model/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
